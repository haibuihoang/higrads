function h_draw_ltitle(title,thick,size,offset)

  if(thick='thick');thick=4;endif
  if(size='size');size=0.15;endif
  if(offset='offset');offset=0;endif

x=_px1
y=_py2+0.1 + offset

'set strsiz 'size
'set string 1 bl 'thick' 0 '
'draw string 'x' 'y' 'title
return
