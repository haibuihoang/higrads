function h_draw_xlab(title, thick, size,offset)
 if(title='title');title="Title ;)";endif
 if(thick='thick');thick=4;endif
 if(size='size');size=0.15;endif
 if(offset='offset');offset=0;endif

;*get graphic infomation
x=_px1+(_px2-_px1)*0.5 
y=_py1 - 0.4 + offset
'set strsiz 'size
'set string 1 tc 'thick' 0'
'draw string 'x' 'y' 'title
say 'draw string 'x' 'y' 'title


return
